runner = "qemu-system-riscv64 -machine virt -cpu rv64 -smp 4 -m 1G -drive if=none,format=raw,file=hdd.dsk,id=foo -bios none -device virtio-rng-device -device virtio-gpu-device -device virtio-net-device -device virtio-tablet-device -device virtio-keyboard-device -serial mon:stdio -s -kernel "	

# -monitor stdio